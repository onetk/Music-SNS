  <!-- css -->
  <style>


    .nav-text {
      font-family: 'Righteous', cursive;
      color: white;
      text-decoration: none;
      font-size: 17px;
      margin: 10px 0px;
      padding:0 0;
      /* top right bottom left */
    }

    body * p{
      padding: 0 0;
      margin: 0 0;
    }

    .catch-title{
      font-family: 'Righteous', cursive;
      font-size: 25px;
      color: white;
      margin: 0 0 5px 0;
    }

    .navbar-inverse{
      display: flex;
      justify-content: center;
      white-space: nowrap;
    }

    nav img {
      border-radius: 50%;
      background-color: aliceblue;
    }

    .eye-catch-top{
      height: 520px;
      width: 100%;
      padding-top: 170px;
      /* background-image: url(/assets/mic.jpg); */
      background-image: url(https://lfs5-kadai.herokuapp.com/assets/img/mic.jpg);
      background-size: cover;
      background-repeat: no-repeat;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .center-vertical {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .center-horizontal {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    .post {
    margin: 20px;
    padding: 10px;
    width: 220px;
    border-radius: 5px;
    word-break: break-all;
    box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.4);
    font-size:17px;
    }

    .form-size{
      height: 17px;
      padding: 2px 5px;
      margin:  5px 0px;
      font-size: 12px;
      border-radius: 2px;
      font-size: 10px;
      line-height: 1;
      vertical-align:middle;
      align-items: center;
      /* vertical-align:text-top; */
    }

  </style>
  <%# <link href="assets/style.css" rel="stylesheet" type="text/css"> %>

  <!-- bootstrap 3.3.7 -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <!-- google web Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">

</head>
<body>

  <nav class="navbar-inverse" style="border-radius: 0px;">
     <%# <div class="container-fluid"> %>
        <ul class="nav navbar-nav">
            <li><a href="/" class="nav-text">MUSIC SNS!!!</a></li>
          <% if !current_user.nil? %>
            <li><a href="/home"><img href="/home" class="center_vertical" src="<%=current_user.profile_image%>" style="width:40px; height:40px; "></a></li>
            <li><a href="/search" class="nav-text">search</a></li>
            <li><a href="/signout" class="nav-text">logout</a></li>
          <% else %>
            <li><a href="/signup" class="nav-text">新規登録</a></li>
          <% end %>
        </ul>
    <%# </div> %>
  </nav>

    <% if request.path == "/" %>
      <section class="eye-catch-top center-verticle">
          <h1 class="catch-title"> MUSIC SNS!!! </h1>
          <% if current_user.nil? %>
            <form class="form-inline" action="/signin" method="post">
              <input class="form-size" name="name" placeholder="ユーザ名">
              <input class="form-size" name="password" type ="password" placeholder="パスワード">
              <%# <input class="btn-xs" type="submit" value="ログイン"> %>
              <input class="form-size" type="submit" value="ログイン">
            </form>
          <% end %>
      </section>
    <% end %>
  <%= yield %>

</body>
</html>
