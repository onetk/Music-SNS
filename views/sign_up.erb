<div class="center-vertical">
  <h2>新規登録</h2>

  <form class="col-lg-3" action="/signup" method="post" style="margin-top:10px;">
    <div class="controls">
      <div class="form-group">
        <input class="form-control input-sm" name="name" placeholder="ユーザー名を入力"><br>
        <input class="form-control input-sm" name="password" type="password" placeholder="パスワードを入力"><br>
        <input class="form-control input-sm" name="password_confirmation" type="password" placeholder="confirm password"><br>
        <input class="input-xlarge" id="picture" name="uploaded_data" type="file">
      </div>
      <div class="form-group col-sm">
        <input class="form-control col-sm" type="submit" value="新規登録">
      </div>
    </div>
  </form>
</div>
